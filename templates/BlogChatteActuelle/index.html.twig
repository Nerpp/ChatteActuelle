{% extends 'base.html.twig' %}

{% block body %}

    <section class="articles">

     <div class ="Titre">
        <h1>Articles</h1>
        </div>

     {% for article in articles %}
        
        <article>
            <div class="SousTitres">
            <h3>{{article.titre}}</h3>
            </div>

            <div class="metadata">
            <p>Ecrit le {{article.date | date('d/m/Y')}} Ã  {{ article.date | date('H:i')}} dans la categories cool</p>
            </div>
            <div class ="content">
            <img src="{{article.image}}" alt="Smiley face" >
            </div>

            <div class="Articles">
            {{article.article | raw}}
            </div>
            
            <div>
            <a href="{{ path('BlogChatteActuelleShow', {'id':article.id}) }}" class="btn btn-primary">Lire</a>
            </div>
        </article>
    {% endfor %}
    </section>

{% endblock %}
